<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="index.html" class="brand-link">
        <img src="assets/dist/img/sheep.png" alt="" class="brand-image img-circle elevation-3" />
        <span class="brand-text font-weight-light">Farm Dairy</span>
    </a>

    <div class="sidebar">
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="assets/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image" />
            </div>
            <div class="info">
                <div class="d-block" style="color: white; cursor: pointer;" @onclick="Logout">
                    @UserName
                </div>
            </div>
        </div>

        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                @foreach (var item in NavigationItems)
                {
                    <li class="nav-item">
                        <NavLink class="nav-link" href="@item.Url">
                            <i class="@item.IconClass nav-icon"></i>
                            <p>@item.Name</p>
                        </NavLink>
                    </li>
                }
            </ul>
        </nav>
    </div>
</aside>

@code {
    // Mock username (replace with real data)
    private string UserName { get; set; } = "John Doe";

    // Navigation items list
    private List<NavigationItem> NavigationItems = new()
    {
        new NavigationItem { Name = "Dashboard", Url = "/dashboard", IconClass = "fas fa-chart-line" },
        new NavigationItem { Name = "Animals", Url = "/animals", IconClass = "fas fa-paw" },
        new NavigationItem { Name = "Breeding Pairs", Url = "/app/breeding-pairs", IconClass = "fas fa-glass-cheers" },
        new NavigationItem { Name = "Contacts", Url = "/app/contacts", IconClass = "fas fa-address-book" },
        new NavigationItem { Name = "Notes", Url = "/app/notes", IconClass = "fas fa-book" },
        new NavigationItem { Name = "Calendar", Url = "/app/calender", IconClass = "fa fa-calendar" },
        new NavigationItem { Name = "Documents", Url = "/app/documents", IconClass = "fas fa-file" },
        new NavigationItem { Name = "Reports", Url = "/app/reports", IconClass = "fas fa-file-export" },
        new NavigationItem { Name = "Pictures", Url = "/app/pictures", IconClass = "fas fa-image" },
        new NavigationItem { Name = "Metadata", Url = "/app/metadata", IconClass = "fas fa-cubes" }
    };

    // Logout method (replace with real logic)
    private void Logout()
    {
        Console.WriteLine("User logged out");
    }

    // Navigation item model
    public class NavigationItem
    {
        public string Name { get; set; } = string.Empty;
        public string Url { get; set; } = string.Empty;
        public string IconClass { get; set; } = string.Empty;
    }
}
