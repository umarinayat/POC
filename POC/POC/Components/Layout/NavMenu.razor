<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <div class="w-100 text-center mt-1">
        <a href="/" class="brand-link flex-row justify-content-between">
            <img src="Usquare logo-04.png" alt="logo" class="brand-image img-circle elevation-3" height="50" width="50" />

        </a>
        <h4 class="text-decoration-none text-white">Farm Vaccination</h4>
    </div>


    <div class="sidebar">
        <div class="user-panel mt-3 pt-5 d-flex">
            <div class="image">
                <img src="profile.png" class="img-circle elevation-2" alt="User Image" height="50" width="50" />
            </div>
            <div class="info">
                <div class="d-block pt-3 ps-1" style="color: white; cursor: pointer;" @onclick="Logout">
                    @UserName
                </div>
            </div>
        </div>

        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                @foreach (var item in NavigationItems)
                {
                    <li class="nav-item">
                        <NavLink class="nav-link flex-row justify-content-start  gap-2" href="@item.Url">
                            <i class="@item.IconClass nav-icon"></i>
                            <p class="mt-3">@item.Name</p>
                        </NavLink>
                    </li>
                }
            </ul>
        </nav>
    </div>
</aside>

@code {
    // Mock username (replace with real data)
    private string UserName { get; set; } = "John Doe";

    // Navigation items list
    private List<NavigationItem> NavigationItems = new()
    {
        new NavigationItem { Name = "Dashboard", Url = "/dashboard", IconClass = "fas fa-chart-line" },
        new NavigationItem { Name = "Animals", Url = "/animals", IconClass = "fas fa-paw" },
        new NavigationItem { Name = "Breeding Pairs", Url = "/app/breeding-pairs", IconClass = "fas fa-glass-cheers" },
