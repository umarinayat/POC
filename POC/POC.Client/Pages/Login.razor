@page "/login"
@inject NavigationManager Navigation

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow-lg" style="width: 400px;">
        <div class="card-body text-center">
            <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" alt="GitHub Logo" width="80" class="mb-3">
            <h3 class="mb-4">GitHub Login</h3>
            <p class="text-muted">Please log in using your GitHub account to continue.</p>
            <button class="btn btn-dark btn-lg" @onclick="LoginWithGitHub">
                <i class="bi bi-github"></i> Login with GitHub
            </button>
        </div>
    </div>
</div>

@code {
    private void LoginWithGitHub()
    {
        Navigation.NavigateTo("/auth/github", true);
    }
}
